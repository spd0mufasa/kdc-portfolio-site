<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
  #typed-text {
    opacity: 0;
    color: red; /* Set the text color to red */
    transition: opacity 1.5s ease-in-out; /* Slower transition (1.5 seconds) */
  }
  #typed-text.fading-in {
    opacity: 1;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const texts = ["a Back-End Developer", "a Problem Solver", "a Code Enthusiast"];
    const el = document.getElementById("typed-text");
    const fadeDuration = 1500; // Slower fade duration (1500 milliseconds)
    const delayBetween = 2500; // Adjust delay as needed

    let textIndex = 0;

    function changeText() {
      if (el) {
        // Start fading out
        el.classList.remove("fading-in");
        setTimeout(() => {
          // Update the text immediately after fade out starts
          el.textContent = texts[textIndex];
          // Start fading in
          el.classList.add("fading-in");
          // Move to the next text
          textIndex = (textIndex + 1) % texts.length;
          // Set timeout for the next change
          setTimeout(changeText, delayBetween);
        }, 0); // Start the text change immediately after fade out begins
      }
    }

    if (el) {
      // Initial fade-in
      el.textContent = texts[0];
      el.classList.add("fading-in");
      setTimeout(changeText, delayBetween);
    }
  });
</script>
